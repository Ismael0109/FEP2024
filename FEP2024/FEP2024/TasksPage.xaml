<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FEP2024.TasksPage"
             Title="Tarefas do Dia"
             BackgroundImageSource="DesingTelaVisualizarTarefas.png"
             BackgroundColor="#f4f4f6">

    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="TasksListView" SelectedItem="{Binding SelectedTask}" ItemsSource="{Binding Tasks}" ItemTapped="TasksListView_ItemTapped" >
                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" Detail="{Binding Description}" TextColor="Black" DetailColor="#e0b0ff" />
                    </DataTemplate>
                    
                </ListView.ItemTemplate>
               


            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>